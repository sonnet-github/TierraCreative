@model TierraCreative.Model.AIL

@{
    ViewBag.Title = "Supplementary Dividends Review";
    Layout = "~/Views/Shared/Main.cshtml";
}

@if (ViewBag.IsView == "SDReview")
{

    <div class="col-lg-12 form">
        <h4>
            <p><small>Welcome <strong>John Smith (JohnSmith)</strong></small></p>
        </h4>
        <h2>Supplementary Dividends Review</h2>
        <hr />
    </div>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group row">
                @Html.Label("UserName", "UserName", new { @class = "control-label col-lg-3 col-sm-6" })
                <div class="col-lg-4 col-sm-6">
                    <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["UserName"])" />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.FromCSN, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                <div class="col-lg-4 col-sm-6">

                    <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["FromCSN"])" />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ToCSN, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                <div class="col-lg-4 col-sm-6">

                    <input type="text" class="form-control" readonly="readonly" disabled="disabled" value=" @Html.Raw(Session["ToCSN"])" />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ISIN, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                <div class="col-lg-4 col-sm-6">

                    <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["ISIN"])" />
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.TransferAmount, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                <div class="col-lg-4 col-sm-6">

                    <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["TransferAmount"])" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-3 col-sm-6"></div>
                <div class="col-lg-4 col-sm-6">
                    <input type="submit" value="Submit" class="btn default" />
                    &nbsp;
                    <input id="Button1" type="button" value="Edit" class="btn default" onclick="window.location='add'" />
                </div>
            </div>
        </div>
    }
}
@if (ViewBag.IsView == "Acknowledgement")
{

    <div class="container form">
        <div class="col-lg-12">
            <h4>
                <p><small>Welcome <strong>(@Html.Raw(Session["UserName"]))</strong></small></p>
            </h4>
            <h2>
                Supplementary Dividend Acknowledgement
            </h2>
            <hr />
        </div>
        <div class="col-lg-12">
            <p>
                Your entry is available for review by another user who has access to approve the details.
            </p>
            <ul class="nav flex-column nav-pills nav-forms">
                <li class="nav-item">
                    <a class="btn default" href="../supplementarydividends/add">Submit another?</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../drps/add">Submit DRP</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../ails/add">Submit AIL</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../logout">Sign Out</a>
                </li>
            </ul>
        </div>
    </div>
}