@model IEnumerable<TierraCreative.ViewModels.ReviewModel>

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/Main.cshtml";
}
@section HeadContent
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <style>
        table thead th {
            color: #5791C2 !important;
        }

        #DataTables_Table_0_wrapper > div:nth-child(1), #DataTables_Table_0_wrapper > div:nth-child(3) > div.col-sm-12.col-md-5 {
            display: none !important;
        }

        table.dataTable th {
            border-bottom: 0;
            text-transform:uppercase;
        }

        table tbody tr:last-of-type td {
            border-bottom: 1px solid #dee2e6;
        }

        .pagination {
            margin: 50px 0 !important;
        }
    </style>
}
@section ScriptContent
{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pagingType": "numbers",
                "order": [],
                "columnDefs": [
                    { "type": "date-uk", targets: 2 },
                    { "orderable": false, "targets": 0 },
                    { "orderable": false, "targets": 1 },
                    { "orderable": false, "targets": 2 },
                    { "orderable": false, "targets": 3 },
                    { "orderable": false, "targets": 4 },
                    { "orderable": false, "targets": 5 },
                    { "orderable": false, "targets": 6 }
                ]
            });

        });
    </script>
    <script>
        $(function () {
            $("nav a:contains('Review')").parent().addClass("active");
        });
    </script>
}

<div class="col-lg-12 form">
    <h4>
        <p><small>Welcome <strong>@Html.Raw(Session["UserFullName"])</strong>(@Html.Raw(Session["UserName"]))</small></p>
    </h4>
    <h2>Transaction Review</h2>
    <hr />
</div>

<div class="col-lg-12">
    <div class="table-responsive-md">
        <table class="table table-condensed">
            <thead>
                <tr>
                    @*<th align="left">
                            @Html.DisplayNameFor(model => model.Source)
                        </th>*@
                    <th align="left">
                        @Html.DisplayNameFor(model => model.Source)
                    </th>
                    <th align="left">
                        @Html.DisplayNameFor(model => model.From)
                    </th>
                    <th align="left">
                        @Html.DisplayNameFor(model => model.To)
                    </th>
                    <th align="left">
                        @Html.DisplayNameFor(model => model.ISIN)
                    </th>
                    <th align="left">
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th align="left" style="min-width:150px;">
                        @Html.DisplayNameFor(model => model.SubmittedBy)
                    </th>
                    <th align="left" style="min-width:150px;">
                        @Html.DisplayNameFor(model => model.ApprovedBy)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Source)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Source)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.From)
                        </td>
                        <td>
                            @if (item.To != "")
                            {
                                @Html.DisplayFor(modelItem => item.To)
                            }
                            else { 
                                @: -
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISIN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmittedBy)
                        </td>
                        <td>

                            @if (item.ApprovedBy == "Pending")
                            {
                                @: <span class='text-danger'>Pending</span>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.ApprovedBy)
                            }
                        </td>

                        <td>
                            @if (item.ApprovedBy == "Pending")
                            {
                                @Html.ActionLink("Review", "Approve", new { id = item.Id, source = item.Source })
                            }
                            else
                            {
                                @Html.Raw("Review")
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
