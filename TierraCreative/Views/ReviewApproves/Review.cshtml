@model IEnumerable<TierraCreative.ViewModels.ReviewModel>

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/Main.cshtml";
}
@section HeadContent
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <style>
        table thead th{
        color:#5791C2!important;
        }
    </style>
}
@section ScriptContent
{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "order": []
            });

        });
    </script>
}

<div class="col-lg-12 form">
    <h4>
        <p><small>Welcome <strong>John Smith (JohnSmith)</strong></small></p>
    </h4>
    <h2>Transaction Review</h2>
    <hr />
</div>

<div class="col-lg-12">
    <table class="table">
        <thead>
            <tr>
                @*<th align="left">
                        @Html.DisplayNameFor(model => model.Source)
                    </th>*@
                <th align="left">
                    @Html.DisplayNameFor(model => model.From)
                </th>
                <th align="left">
                    @Html.DisplayNameFor(model => model.To)
                </th>
                <th align="left">
                    @Html.DisplayNameFor(model => model.ISIN)
                </th>
                <th align="left">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th align="left">
                    @Html.DisplayNameFor(model => model.SubmittedBy)
                </th>
                <th align="left">
                    @Html.DisplayNameFor(model => model.ApprovedBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Source)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.From)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISIN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmittedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovedBy)
                    </td>

                    <td>
                        @if (item.ApprovedBy == "Pending")
                        {
                            @Html.ActionLink("Review", "Approve", new { id = item.Id, source = item.Source })
                        }
                        else
                        {
                            @Html.Raw("Review")
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>