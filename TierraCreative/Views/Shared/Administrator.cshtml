<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/styles.css" rel="stylesheet" />
    @RenderSection("HeadContent", false)
</head>
<body>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <style>
        table thead th {
            color: #5791C2 !important;
        }

        #DataTables_Table_0_wrapper > div:nth-child(1), #DataTables_Table_0_wrapper > div:nth-child(3) > div.col-sm-12.col-md-5 {
            display: none !important;
        }

        table.dataTable th {
            border-bottom: 0;
        }

        table tbody tr:last-of-type td {
            border-bottom: 1px solid #dee2e6;
        }

        .pagination {
            margin: 50px 0 !important;
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/admin/main">
            <img src="/Images/Logo.png" alt="Computershare" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/create">Create New <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/support">Support</a>
                </li>
                <li class="nav-item d-lg-none ">
                    <a class="nav-link" href="#">Change Password</a>
                </li>
                <li class="nav-item d-lg-none">
                    <a class="nav-link" href="/logout">Log Off</a>
                </li>
            </ul>
            <a class="btn d-none d-lg-block mb-3 mb-md-0 ml-md-3" style="color:rgba(255,255,255,.5);" href="#">Change Password</a>
            <a class="btn d-none d-lg-block mb-3 mb-md-0 ml-md-3" style="color:rgba(255,255,255,.5);" href="/logout">Log off</a>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="container form">
        <div class="col-lg-12">
            <hr />
            <p class="text-center">
                &copy; 2019 Computershare Investor Services Limited
            </p>
        </div>
        @RenderSection("Scripts", false)
        @RenderSection("ScriptContent", false)
        <script>
            // Restricts input for the set of matched elements to the given inputFilter function.
            (function ($) {
                $.fn.inputFilter = function (inputFilter) {
                    return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function () {
                        if (inputFilter(this.value)) {
                            this.oldValue = this.value;
                            this.oldSelectionStart = this.selectionStart;
                            this.oldSelectionEnd = this.selectionEnd;
                        } else if (this.hasOwnProperty("oldValue")) {
                            this.value = this.oldValue;
                            this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                        } else {
                            this.value = "";
                        }
                    });
                };
            }(jQuery));
            $(document).ready(function () {
                $(".numeric").inputFilter(function (value) {
                    return /^\d*$/.test(value);    // Allow digits only, using a RegExp
                });
            });
        </script>
</body>
</html>
