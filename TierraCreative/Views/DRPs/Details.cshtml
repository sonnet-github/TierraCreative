@model TierraCreative.Model.DRP

@{
    ViewBag.Title = "DRP Review";
    Layout = "~/Views/Shared/Main.cshtml";
}
@section ScriptContent
{
    <script>
        $(function () {
            $("nav a:contains('DRP')").parent().addClass("active");
        });
    </script>
}

@if (ViewBag.IsView == "DRPReview")
{

    <div class="col-lg-12 form">
        <h4>
            <p><small>Welcome <strong>@Html.Raw(Session["UserFullName"])</strong> (@Html.Raw(Session["UserName"]))</small></p>
        </h4>
        <h2>DRP Review</h2>
        <hr />
    </div>

    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group row">
                    @Html.Label("UserName", "Username", new { @class = "control-label col-lg-3 col-sm-6" })
                    <div class="col-lg-4 col-sm-6">
                        <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["UserName"])" />
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.CSN, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                    <div class="col-lg-4 col-sm-6">
                        <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["CSN"])" />
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.ISIN, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                    <div class="col-lg-4 col-sm-6">
                        <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["ISIN"])" />
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.DRPAmount, htmlAttributes: new { @class = "control-label col-lg-3 col-sm-6" })
                    <div class="col-lg-4 col-sm-6">
                        <input type="text" class="form-control" readonly="readonly" disabled="disabled" value="@Html.Raw(Session["DRPAmount"])" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-3 col-sm-6"></div>
                    <div class="col-lg-4 col-sm-6">
                        <input type="submit" value="Submit" class="btn default" />
                        &nbsp;
                        <input id="Button1" type="button" value="Edit" class="btn default edit" onclick="window.location='add'" />
                    </div>
                </div>
            </div>
        }
    </div>
}
@if (ViewBag.IsView == "Acknowledgement")
{
    <div class="container form">
        <div class="col-lg-12">
            <h4>
                <p><small>Welcome <strong>@Html.Raw(Session["UserFullName"])</strong> (@Html.Raw(Session["UserName"]))</small></p>
            </h4>
            <h2>
                DRP Acknowledgement
            </h2>
            <hr />
        </div>
        <div class="col-lg-12">
            <p>
                Your entry is available for review by another user who has access to approve the details.
            </p>
            <ul class="nav flex-column nav-pills nav-forms">
                <li class="nav-item">
                    <a class="btn default" href="../drps/add">Submit another?</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../ails/add">Submit AIL</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../supplementarydividends/add">Submit Supplementary Dividend</a>
                </li>
                <li class="nav-item">
                    <a class="btn default" href="../logout">Sign Out</a>
                </li>
            </ul>
        </div>
    </div>
}