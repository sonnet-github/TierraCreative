
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
            <img src="/Images/Logo.png" alt="Computershare" />
        </a>
    </nav>
    <div class="container">
        <div class="col-lg-12">
            <h2>Admin Login</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                if (ViewBag.ErrorMessage != null)
                {
                    <p style="color:red;">@Html.Raw(ViewBag.ErrorMessage)</p>
                }

                <div class="form-group row">
                    <label for="#txtusername" class="col-lg-2 col-sm-6 col-form-label text-right">Username</label>
                    <div class="col-lg-3 col-sm-6">
                        <input id="txtusername" name="txtusername" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="#txtpassword" class="col-lg-2 col-sm-6 col-form-label text-right">Password</label>
                    <div class="col-lg-3 col-sm-6">
                        <input id="txtpassword" name="txtpassword" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for=".default" class="col-lg-2 col-sm-6 col-form-label text-right"></label>
                    <div class="col-lg-3 col-sm-6">
                        <a href="forgotpassword">Forgotten password</a>
                    </div>
                </div>
                <div class="form-group row">
                    <label for=".default" class="col-lg-2 col-sm-6 col-form-label text-right"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input type="submit" value="Sign In" class="btn default" />
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="container form">
        <div class="col-lg-12">
            <hr />
            <p class="text-center">
                &copy; 2019 Computershare Investor Services Limited
            </p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
