<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Disable User?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to disable this user?
            </div>
            <div class="modal-footer">
                <a href="#" type="button" id="confirm_disable" class="btn btn-default">Yes</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(".confirmModal").on("click",function () {
        if (!$(this).is(":checked")) {
            $(this).prop("checked", true);
            $("#confirmModal").modal("show");
        }
    });
    $("#confirm_disable").on("click", function () {
        $(".confirmModal").prop("checked", false);
         $("#confirmModal").modal("hide");
    });
    </script>
}
